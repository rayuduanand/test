pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'mvn -Denforcer.skip=true clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test -Denforcer.skip=true'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deliver') {
            steps {
                 sh 'chmod +x ./jenkins/scripts/deliver.sh'
                 sh 'who am i'
                 sh './jenkins/scripts/deliver.sh'
            }
        }
    }
}
